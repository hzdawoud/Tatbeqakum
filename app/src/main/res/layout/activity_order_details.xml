<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbar"/>

            <TextView
                android:layout_margin="@dimen/_20sdp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/cairo_reqular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_details"
                android:textSize="@dimen/_13ssp">
            </TextView>

            <RelativeLayout
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp">

                <TextView
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/shape_text_vie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="8">
                </TextView>

                <androidx.cardview.widget.CardView
                    android:padding="@dimen/_10sdp"
                    android:layout_margin="@dimen/_15sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="@dimen/_40sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:elevation="@dimen/_2sdp">

                    <ImageView
                        android:scaleType="centerInside"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_icon_camera">
                    </ImageView>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add the discount coupon"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/cairo_reqular"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableStart="@drawable/ic_icom_add">
            </TextView>

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/shape_text_vie"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content">
            </TextView>


            <Button
                android:id="@+id/btn_map"
                android:layout_marginTop="@dimen/_70sdp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/hape_btn_gradiant"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/cairo_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_50sdp">
            </Button>


        </LinearLayout>
    </ScrollView>




</LinearLayout>