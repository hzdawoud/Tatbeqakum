<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <include layout="@layout/side_toolbar"
        android:id="@+id/above_toolbar"/>

    <androidx.appcompat.widget.SearchView
        android:layout_below="@+id/above_toolbar"
        android:elevation="@dimen/_7sdp"
        android:layout_margin="@dimen/_15sdp"
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_search_bar"
        android:paddingHorizontal="@dimen/_5sdp"
        android:theme="@style/MySearch"
        app:iconifiedByDefault="false"
        app:queryHint="البحث عن متجر أو مطعم"
        app:searchIcon="@drawable/ic_icon_search">
    </androidx.appcompat.widget.SearchView>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_confirm"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/hape_btn_gradiant"
        android:textAllCaps="false"
        android:text="التالي"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/cairo_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_50sdp">
    </Button>

</RelativeLayout>


