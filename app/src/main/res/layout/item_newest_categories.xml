<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp"
        android:elevation="@dimen/_7sdp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/cairo_bold"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="عرض لمدة يوم واحد فقط">
                </TextView>


                <TextView
                    android:fontFamily="@font/cairo_bold"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/colorRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="بدلة كلاسيك رجالي">
                </TextView>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_newst">
                    </ImageView>

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/cairo_bold"
                        android:textSize="@dimen/_8ssp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="توصيل مجاني">
                    </TextView>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#FAB03E">

                        <TextView
                            android:layout_gravity="center"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:fontFamily="@font/cairo_bold"
                            android:textSize="@dimen/_8ssp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="550$">
                        </TextView>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                app:cardElevation="0dp"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_newest">
                </ImageView>
            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>