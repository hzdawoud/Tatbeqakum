<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".auth.SignUpActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbar"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_icon_question_mark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/cairo_bold"
                android:textSize="@dimen/_13ssp"
                android:text="Welcome, how can we help you?">
            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                android:elevation="@dimen/_2sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:drawableStart="@drawable/ic_icon_chat"
                        android:drawablePadding="@dimen/_20sdp"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="Live chat"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/cairo_bold">
                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGrey"/>


                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_icon_online_support"/>

                        <LinearLayout
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:drawablePadding="@dimen/_20sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Customers service"
                                android:textSize="@dimen/_11ssp"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/cairo_reqular">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="How can we help you?"
                                android:textSize="@dimen/_9ssp"
                                android:textColor="@color/colorGrey2"
                                android:fontFamily="@font/cairo_reqular">
                            </TextView>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                android:elevation="@dimen/_7sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:drawableEnd="@drawable/ic_icon_arrow_left"
                        android:drawablePadding="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="I need help with my current order"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/cairo_bold">
                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGrey"/>

                    <TextView
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:drawableEnd="@drawable/ic_icon_arrow_left"
                        android:drawablePadding="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="How do I request from Tatbeqakum?"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/cairo_bold">
                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGrey"/>

                    <TextView
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:drawableEnd="@drawable/ic_icon_arrow_left"
                        android:drawablePadding="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="Show style"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/cairo_bold">
                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGrey"/>

                    <TextView
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:drawableEnd="@drawable/ic_icon_arrow_left"
                        android:drawablePadding="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="I need help with an order received"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/cairo_bold">
                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGrey"/>

                    <TextView
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:drawableEnd="@drawable/ic_icon_arrow_left"
                        android:drawablePadding="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="I have an inquiry as a store owner"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/cairo_bold">
                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGrey"/>

                    <TextView
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:drawableEnd="@drawable/ic_icon_arrow_left"
                        android:drawablePadding="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="How do I work with your team?"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/cairo_bold">
                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGrey"/>

                    <TextView
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:drawableEnd="@drawable/ic_icon_arrow_left"
                        android:drawablePadding="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="I have a suggestion"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/cairo_bold">
                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorGrey"/>

                    <TextView
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:drawableEnd="@drawable/ic_icon_arrow_left"
                        android:drawablePadding="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="Other common questions"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/cairo_bold">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </ScrollView>

</LinearLayout>