<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/_15sdp">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:src="@drawable/img_order">
                    </ImageView>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/cairo_bold"
                        android:textSize="@dimen/_8ssp"
                        android:layout_height="wrap_content"
                        android:text="هامبرجر"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorGrey"
                        android:fontFamily="@font/cairo_bold"
                        android:textSize="@dimen/_8ssp"
                        android:layout_height="wrap_content"
                        android:text="بدون بصل, تحميص خفيف"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/cairo_bold"
                        android:textSize="@dimen/_8ssp"
                        android:layout_height="wrap_content"
                        android:text="مطعم البيك"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/cairo_bold"
                        android:textSize="@dimen/_8ssp"
                        android:layout_height="wrap_content"
                        android:text="الشوقية ، مكة"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/cairo_bold"
                        android:textSize="@dimen/_8ssp"
                        android:layout_height="wrap_content"
                        android:text="رقم الطلب"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/cairo_bold"
                        android:textSize="@dimen/_8ssp"
                        android:layout_height="wrap_content"
                        android:text="5009#"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/cairo_bold"
                        android:textSize="@dimen/_8ssp"
                        android:layout_height="wrap_content"
                        android:text="20/6/2/2020"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/cairo_bold"
                            android:textSize="@dimen/_8ssp"
                            android:layout_height="wrap_content"
                            android:text="عدد الوجبات  X2"/>


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorGrey">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:elevation="@dimen/_7sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_14sdp">

                    <TextView
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delete_order"
                        android:textColor="@color/colorPrimary"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableEnd="@drawable/ic_icon_delete">
                    </TextView>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/_5sdp"
                    android:elevation="@dimen/_7sdp"
                    app:cardBackgroundColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_14sdp">

                    <TextView
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/retry"
                        android:textColor="@color/colorPrimary"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableEnd="@drawable/ic_icon_retry">
                    </TextView>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/_5sdp"
                    android:elevation="@dimen/_7sdp"
                    app:cardBackgroundColor="@color/colorGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_14sdp">

                    <TextView
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17.94 SAR"
                        android:textColor="@color/colorPrimary"
                        android:drawablePadding="@dimen/_5sdp"
                        >
                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>